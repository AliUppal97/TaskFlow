# Application
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=taskflow

# MongoDB
MONGODB_URI=mongodb://localhost:27017/taskflow
MONGO_DATABASE=taskflow

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-here-at-least-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-at-least-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# CORS (Backend allows requests from frontend)
# Frontend runs on port 3000, so backend must allow this origin
CORS_ORIGIN=http://localhost:3000

# Next.js Frontend API URL
# Backend runs on port 3001, so frontend must connect to this URL
NEXT_PUBLIC_API_URL=http://localhost:3001




