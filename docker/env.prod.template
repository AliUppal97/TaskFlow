# TaskFlow Production Environment Variables
# Copy this file to docker/.env.prod and fill in your values

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=taskflow_prod
DATABASE_PASSWORD=your-secure-database-password-here
DATABASE_NAME=taskflow_prod
DATABASE_SSL=false

# MongoDB Configuration
MONGO_DATABASE=taskflow_prod
MONGODB_URI=mongodb://mongodb:27017/taskflow_prod

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here

# JWT Configuration (Use strong, unique secrets - 32+ characters)
JWT_ACCESS_SECRET=your-super-secure-access-secret-here-at-least-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here-at-least-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=production
CORS_ORIGIN=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
LOG_LEVEL=info

# Frontend Configuration
FRONTEND_PORT=80

# Nginx Proxy Configuration (Optional)
NGINX_PORT=443
NGINX_HTTP_PORT=80

# SSL Configuration (for nginx-proxy)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Observability (Optional)
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_METRICS=true

# Email Configuration (Optional)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@yourdomain.com

# File Storage (Optional - for future features)
AWS_S3_BUCKET=your-s3-bucket
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key


